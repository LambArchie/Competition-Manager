import os
basedir = os.path.abspath(os.path.dirname(__file__))

class Config(object):
    """
    Settings below can be changed
    """
    SECRET_KEY = os.environ.get('SECRET_KEY') or 'you-will-never-guess!-123' # Please Change before starting
    SQLALCHEMY_DATABASE_URI = os.environ.get('DATABASE_URL') or \
        'sqlite:///' + os.path.join(basedir, 'app.db')

    CAPTCHA_ENABLED = True # Add keys or disable
    RECAPTCHA_PUBLIC_KEY = ""
    RECAPTCHA_PRIVATE_KEY = ""

    MAX_UPLOAD_SIZE = 4  # In MiB
    DISABLE_PUBLIC_REGISTRATION = False # Can always create users from admin area
    BRAND_NAME = "Competition Manager"

    # Passwords Settings
    # Based of NIST guidelines https://pages.nist.gov/800-63-3/sp800-63b.html
    # Can add custom requirements by editing app/auth/passwords.py
    MIN_LENGTH = 12
    HIBP_PW_CHECK = True # Uses https://haveibeenpwned.com/Passwords to check password 
                         # has been in a data breach. Uses k-anonymity for security

    # Do not edit below this line unless you know what you are doing
    UPLOADS_DEFAULT_DEST = basedir + '/uploads/'

    SQLALCHEMY_TRACK_MODIFICATIONS = False
    MAX_CONTENT_LENGTH = float(MAX_UPLOAD_SIZE) * 1024 * 1024 # Flask-Uploads need in bytes
    UPLOADED_IMAGES_DEST = UPLOADS_DEFAULT_DEST